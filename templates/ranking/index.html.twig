{% extends 'base.html.twig' %}

{% block title %}Ranking index{% endblock %}

{% block body %}
    <h1>Ranking index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Country</th>
                <th>Gold</th>
                <th>Silver</th>
                <th>Bronze</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ranking in rankings %}
            <tr>
                <td>{{ ranking.id }}</td>
                <td>{{ ranking.country }}</td>
                <td>{{ ranking.gold }}</td>
                <td>{{ ranking.silver }}</td>
                <td>{{ ranking.bronze }}</td>
                <td>
                    <a href="{{ path('app_ranking_show', {'id': ranking.id}) }}">show</a>
                    <a href="{{ path('app_ranking_edit', {'id': ranking.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_ranking_new') }}">Create new</a>
{% endblock %}
